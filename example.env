# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
# MongoDB Atlas connection string
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/waste_segregator

# ============================================
# JWT Authentication
# ============================================
# Secret key for signing JWT tokens (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
# Token expiration time (e.g., 7d, 24h, 1h)
JWT_EXPIRES_IN=7d
# Refresh token expiration time
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# Password Hashing
# ============================================
# Number of salt rounds for bcrypt (higher = more secure but slower)
BCRYPT_SALT_ROUNDS=10

# ============================================
# Cloudinary Configuration (Image Upload)
# ============================================
# Your Cloudinary cloud name
CLOUDINARY_CLOUD_NAME=your_cloud_name
# Cloudinary API key
CLOUDINARY_API_KEY=your_api_key
# Cloudinary API secret
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# Email Configuration (Nodemailer)
# ============================================
# Admin email address for sending notifications
ADMIN_EMAIL=admin@wastemanagement.com
# SMTP server host (e.g., smtp.gmail.com, smtp.mailtrap.io)
SMTP_HOST=smtp.gmail.com
# SMTP server port (587 for TLS, 465 for SSL)
SMTP_PORT=587
# SMTP username/email
SMTP_USER=your_email@gmail.com
# SMTP password or app-specific password
SMTP_PASS=your_app_password

# ============================================
# IoT Device Configuration
# ============================================
# API key for IoT devices to authenticate requests
IOT_API_KEY=your_iot_api_key_change_this_in_production

# ============================================
# Rate Limiting
# ============================================
# Time window for rate limiting in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Maximum number of requests per window
RATE_LIMIT_MAX=100

# ============================================
# Optional: Logging
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info
